<div id="searchcontainer">
    <form>
        <span><input type="text" name="search" placeholder="Type Restaurant Name Here" id="searchbox"></span>
        <span><input class="" type="submit" value="Find Restaurants" id="searchbtn"></span>
    </form>
</div>
<div class="container text-center">
    <h1 class="mt-4 mb-0">Top Rated Restaurants</h1>
    <hr class="mt-3 mb-5">
</div>
<div class="container mb-4">
    <div class="card-deck">
        {{#each data}}
        <div class="card mb-3" style="min-width: 300px; max-width: 350px">
            <a href="/restaurant/{{this._id}}"><img src="/images/{{this.photo1}}" class="card-img-top"></a>
            <div class="card-body">
                <h5 class="card-title">{{this.restaurantName}} <span class="avgRating"
                        style="float:right; color:#fbb710;">{{this.avgRating}}</span></h5>
                <hr>
                <p class="card-text" style="max-height: 200px; overflow:hidden;">{{this.description}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>